{
    "compileOnSave": false,
    "compilerOptions": {
        "module": "ESNext",
        "target": "ES5",
        "lib": [
            "ES2020",
            "DOM"
        ],
        "jsx": "preserve",
        "moduleResolution": "Node",
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noEmit": true,
        "resolveJsonModule": true,
        "skipDefaultLibCheck": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "noErrorTruncation": false,
        "noUnusedLocals": true,
        "importHelpers": true,
        "noUncheckedIndexedAccess": true,
        "rootDir": ".",
        "baseUrl": ".",
    },
    "exclude": [
        "node_modules",
        ".nx",
        "dist"
    ]
}